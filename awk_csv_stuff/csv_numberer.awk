# - adds number of following rows in top
# - adds number of following columns in left
# - for proper WTF loading
# - outputs stream
# ------------------------------------------------------------------------------------------------------------------
BEGIN {
  RS = "\n";
  FS = ",";
}
{
  if ( NF > 0) {
    sub(/^/,NF FS);
  }
  else {
    sub(/^/,NF);  
  }
  if ( NR == 1) {
    OUT=$0;
  }
  else {
    OUT=OUT RS $0;
  }
}
END {
  print(NR);
  print(OUT);
  exit(0);
}